{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./lib",
    "locale": "ko",
    "pretty": true,
    "watch": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "./src/**/*.ts*",
  ],
  "exclude": [
    "node_modules"
  ]
}
