{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "locale": "ko",
    "pretty": true,
    "lib": [
      "es2017",
      "dom",
    ],
    "allowSyntheticDefaultImports": true,
  },
  "include": [
    "src",
  ],
  "exclude": [
    "node_modules"
  ]
}
